
  <div class="listing_container">
    <div class="list_agorist">
      <%= link_to specialty.user.username %>  
    </div>
    <div class="listing">
      <div class="list_name">
        <%= specialty.name %>  
      </div>
      <p class="list_text">
        <%= specialty.line1 %><br />
        <%= specialty.line2 %>
      </p>
      <p class="list_location">
        <%= specialty.street.titleize %><br />
        <%= specialty.city %>
        <% if !specialty.region.blank? %>
          , <%= specialty.region %>
        <% end %>
        <% if !specialty.country.blank? %>
          (<%= specialty.country %>)
        <% end %>
        <%= specialty.postal_code %>
      </p>
      <div class="list_contact">
        <%= specialty.phone %>
        <%= mail_to specialty.email, specialty.email, :encode => :hex %><br />
        <%= link_to specialty.url, specialty.url %>
      </div>
      <div id="currency_badges">
        <%= image_tag('bitcoin_icon.png', :alt => 'Bitcoin', :title => 'Bitcoin') if specialty.tag_list.include?('bitcoin') %>
        <%= image_tag('gold_icon.png', :alt => 'Gold', :title => 'Gold') if specialty.tag_list.include?('gold') %>
        <%= image_tag('silver_icon.png', :alt => 'Silver', :title => 'Silver') if specialty.tag_list.include?('silver') %>
        <%= image_tag('shire_silver_icon.png', :alt => 'Shire Silver', :title => 'Shire Silver') if specialty.tag_list.include?('shire silver') %>
      </div>
    </div>
    <% if specialty.user == current_user %>
      <div class="list_edit">
        <%= link_to "Edit", edit_specialty_path(specialty) %> |
        <%= link_to "Delete", specialty, :method => :delete, 
                                                  :confirm => "Are you sure you want to delete this specialty?" %>
      </div>
    <% end %>
  </div>
  <p></p>